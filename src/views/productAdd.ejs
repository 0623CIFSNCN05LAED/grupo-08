<html lang="en">
<head>
    
    <%- include("partials/head") %>
    <link rel="stylesheet" href="/css/styles-register.css">
    

    <title>Kairos Register</title>
</head>

<body class="ta-center formato-total">
    <header class="mg-top-30">
        <img class="w-200px mb-5" src="/images/kairos-logo-un-color-azul.png" >
    </header>
    <main class="w-100 ta-center">
        <h1 class="ta-center color-azul fz-20">Cargar y modificar productos</h1>

        <form class="ta-center mg-top-50  "action="/login">
            <div class="mg-b border-rad-5 formato-form ">
                <input  type="text" name="nombreproducto" id="nombreproducto" placeholder="Producto">
            </div>
            <div class="mg-b border-rad-5 formato-form">
                <input type="text" name="descripcion" id="descripcion" placeholder="Descripcion">
            </div>
            <div class="mg-b border-rad-5 formato-form">
                <input type="file" name="imagen" accept=".jpg" placeholder="Imagen">
            </div>

            <div class="mg-b border-rad-5 formato-form">
                <input type="categoria" name="categoria" id="categoria" placeholder="Categoria">
            </div>

            <div class="mg-b border-rad-5 formato-form">
                <input type="colores" name="colores" id="colores" placeholder="Colores">
            </div>

            <div class="mg-b border-rad-5 formato-form">
                <input type="precio" name="precio" id="precio" placeholder="precio">
            
            

        
            <nav> 
                <button class="form-button">Modificar Producto</button>
            </nav>

            <nav> 
                <button class="form-button">Cargar Producto</button>
            </nav>

    </form>
    

    </main>
    
</body>
</html>