<!DOCTYPE html>
<html lang="es">

<head>

    <%- include("../partials/head") %>
        <link rel="stylesheet" href="/css/styles-productAdd.css">


        <title>Kairos Add Products</title>
</head>

<body>
    <%- include("../partials/header") %>

    <form action="/products" method="post" enctype="multipart/form-data">
        <div class="form-body">

            <div class="text-form">
                <p class="text">¡Cargá un nuevo producto!</p>
                <p class="text-medium">Por favor completá los datos:</p>
            </div>

            <div class="form-register">
                <label>Modelo</label>
                <input type="text" name="name" id="name">
            </div>

            <select name="marca" class="form-register">
                <% const brands = ["Garmin","Colmi","Suunto","Rolex","Tag Heuer","Omega","Casio","Seiko","Tissot","Imilab"]; %>
                <option value="">Selecciona una marca</option> <!-- Opción vacía o predeterminada -->
                <% brands.forEach(brand => { %>
                  <option value="<%= brand %>"><%= brand %></option>
                <% }); %>
              </select>

              <select name="category" class="form-register">
                <% const categories = ["Clasico", "Deportivo", "Moda Alta Gama", "Deporte Profesional"]; %>
                <option value="">Selecciona una Categoria</option> <!-- Opción vacía o predeterminada -->
                <% categories.forEach(category => { %>
                  <option value="<%= category %>"><%= category %></option>
                <% }); %>
              </select>

            <div class="form-register">
                <label>Descripción</label>
                <input type="text" name="description" id="description">
            </div>

            <div class="form-register">
                <label>Precio</label>
                <input type="number" name="price" id="price">
            </div>

            <div class="form-register">
                <label for="image">Imagen Producto:</label>
                <input type="file" name="image" id="image">
            </div>
            
            <button type="submit">Guardar</button>
        </div>
    </form>

    <%- include("../partials/footer") %>

</body>
</html>