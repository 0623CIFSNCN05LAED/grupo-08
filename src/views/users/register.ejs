<html lang="es">

<head>
  <%- include("../partials/head") %>
    <link rel="stylesheet" href="/css/styles-register.css" />

    <title>Kairos Registro</title>
</head>

<%- include("../partials/header") %>

<body>
  <form action="/users/register" method="post" enctype="multipart/form-data">
    <div class="form-body">
      <div>
        <p class="text">¡Crea una nueva cuenta!</p>
        <p class="text-medium">Por favor completá con tus datos:</p>
        </div>
      <div class="form-register">
        <label>Nombre</label>
        <input type="text" name="first_name" id="name"/>
      </div>
      <div class="form-register">
        <label>Apellido</label>
        <input type="text" name="last_name" id="last_name"/>
      </div>
      <div class="form-register">
        <label>Usuario</label>
        <input type="text" name="user_name" id="user_name"/>
      </div>
      <div class="form-register">
        <label>Email</label>
        <input type="email" name="email" id="email"/>
      </div>
      <div class="form-register">
        <label for="birth_date">Fecha de Nacimiento</label>
        <input type="date" name="birth_date" id="birth_date" />
      </div>
      <div class="form-register">
        <label for="gender">Género</label>
        <select name="gender" id="gender">
          <option name="gender" value="male" id="gender">Masculino</option>
          <option name="gender" value="female" id="gender">Femenino</option>
          <option name="gender" value="female" id="gender">No quiero especificarlo</option>
        </select>
      </div>
      <div class="form-register">
        <label>Contraseña</label>
        <input type="password" name="password" id="password"/>
      </div>
      <div class="form-register">
        <label>Repetir contraseña</label>
        <input type="password" name="repeat_password" id="repeat_password"/>
      </div>
      <div>
        <label for="avatar">Elegí una foto de perfil</label>
        <input type="file" name="avatar" id="avatar"/>
      </div>

      <button type="submit">Registrarse</button>
    </div>
  </form>
</body>

</html>